<Window x:Class="FindWordsButWithGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FindWordsButWithGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="CalculateOutput" Content="Click here to calculate" HorizontalAlignment="Left" Margin="239,334,0,0" VerticalAlignment="Top" FontSize="20
                "  Height="76" Width="260" RenderTransformOrigin="0.5,0.5" Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.084"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.719"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Label Content="How many letters in word?" Margin="15,10,495,354" FontSize="20
               "/>
        <TextBox Name="LetterAmount" HorizontalAlignment="Left" Margin="24,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95" Height="45"/>
        <Label Content="How many words?" Margin="24,126,486,238" FontSize="20                "/>
        <TextBox Name="WordAmount" HorizontalAlignment="Left" Margin="24,201,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="118" Height="54"/>
        <TextBox Name="OutputBox" HorizontalAlignment="Left" Margin="513,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" Height="385" IsReadOnly="True" MaxLines="2147483646" RenderTransformOrigin="0.457,1.092"/>

        <StackPanel Orientation="Horizontal" Margin="24,260,640,45">
            <Button x:Name="BtnBrowse" Width="100" Height="100" FontSize="18" Content="Choose file" Command="{Binding CommandInViewModel}" Click="BtnBrowse_Click"/>
        </StackPanel>
    </Grid>
</Window>
